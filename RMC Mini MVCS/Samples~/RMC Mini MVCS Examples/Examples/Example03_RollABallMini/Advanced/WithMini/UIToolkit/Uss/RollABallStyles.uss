.screen {
    flex-grow: 1;
    background-color: rgba(0, 0, 0, 0);
    position: absolute;
    width: 100%;
    height: 100%;
}

.content {
    flex-grow: 1;
    margin-left: 50px;
    margin-right: 50px;
    margin-top: 50px;
    margin-bottom: 50px;
}

.dialog-view {
    flex-grow: 1;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    background-color: rgba(0, 0, 0, 0.39);
}

.dialog-view-window {
    flex-grow: 1;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    margin-left: 20%;
    margin-right: 20%;
    margin-top: 20%;
    margin-bottom: 20%;
    background-color: rgba(0, 0, 0, 0.78);
}

.unity-label {
    font-size: 40px;
    color: rgb(255, 255, 255);
    -unity-font-style: normal;
}

.unity-button {
    font-size: 40px;
    transition-duration: 0.1s;
}

.unity-button:hover {
    scale: 1.05 1.05;
    transition-duration: 0.1s;
}

.IsVisibleFalse {
    visibility: hidden;
}
